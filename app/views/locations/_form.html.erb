
<%= simple_form_for(@location, data: {controller: "places", action: "google-maps-callback@window->places#initMap"}) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :address, class: "form-control", data: { target: "places.field"} %>
    <%= f.input :latitude, class: "form-control", data: { target: "places.latitude"}  %>
    <%= f.input :longitude, class: "form-control", data: { target: "places.longitude"}  %>
  </div>

  <div>
  <div data-target="places.map" style="height:400px">
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

