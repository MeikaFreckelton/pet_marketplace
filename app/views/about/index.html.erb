        <button type="button" class="btn btn-primary btn-lg"><%= link_to "Create a new listing", new_listing_path %></button>
    <% end %>
    <button type="button" class="btn btn-primary btn-lg"><%= link_to "View Organisations", organisations_profiles_path%></button>
    <button type="button" class="btn btn-primary btn-lg"><%= link_to "View resources", links_path %></button>
    <button type="button" class="btn btn-primary btn-lg"><%= link_to "Make a donation", donate_path %></button>
    <button type="button" class="btn btn-primary btn-lg">
    <% if current_user %>
        <%= link_to "View your account", current_user.users_profile_path %>
    <% elsif current_organisation %>
        <%= link_to "View your Account", current_organisation.organisations_profile %>
    <% end %>
