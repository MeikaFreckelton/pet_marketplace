
<div class="about-page">
    <div class="home-title">
        <% if current_user %>
            <% if current_user.users_profile.first_name != nil %>
                <h1>Welcome back <%= current_user.users_profile.first_name%>!</h1>
            <% end %>
        <% elsif current_organisation %>
            <% if current_organisation.organisations_profile.organisation_name != nil %>
                <h1>Welcome back <%= current_organisation.organisations_profile.organisation_name %>!</h1>
            <% end %>
        <% else %>
            <h1> Welcome to pet place!</h1>
        <% end %>
    </div>
<%= render "shared/carousel"%>
    <div class="about-buttons">
    <button type="button" class="btn btn-primary btn-lg"><%= link_to "View current listings", listings_path%></button>
