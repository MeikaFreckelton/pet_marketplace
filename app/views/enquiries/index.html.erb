<div class="heading">
  <h1 class="centered-heading">Your Enquiries</h1>
</div>
<div class="enquiries-cards">
  <% @enquiries.each do |enquiry| %>

    <% if enquiry.organisations_profile_id == current_organisation.organisations_profile.id %>
    
    <div class="enquiries">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= enquiry.listing.name %> </h5>
          <h6 class="card-subtitle mb-2 text-muted">From: <%= enquiry.name %></h6>
          <h6 class="card-subtitle mb-2 text-muted">On: <%= enquiry.created_at.to_date %></h6>
          <p class="card-text"><%= enquiry.message %></p>
          <%= link_to 'Show', enquiry, class:"card-link enq-links"%>
          <%= link_to "Reply", new_reply_path(:users_profile_id => enquiry.users_profile_id, :organisations_profile_id => enquiry.organisations_profile_id, :listing_id => enquiry.listing_id), class:"card-link enq-links"%>
          <%= link_to "Destroy", enquiry, method: :delete, data: { confirm: 'Are you sure?' }, class:"card-link enq-links" %>
        </div>
      </div>
      
      </div>
    <% end %>
  <% end %>
</div>

<%#= link_to 'New Enquiry', new_enquiry_path %>
