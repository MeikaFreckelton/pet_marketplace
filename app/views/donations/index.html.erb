
<div class="donate-wrapper">
    <div class="donate-centered">
        <div class="heading donate-heading">
            <h1 class="centered-heading">Make a Donation</h1>
        </div>
        <%# make button %>
        <%= link_to "Read about our organisations here", organisations_profiles_path, class: "read-more-link"%>


        <%# add image, add organisation, add location, add donate button %>
        <div class="card" id="donate-card">
            <div class="card-body card-title-border">
                <h5 class="card-title">This month's featured organisation </h5>
                <%# <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> %>
            </div>
            
            <%= image_tag @featured.pictures.first, class: "card-img-bottom"%>
            <div class="card-body" id="donate-card-body">
                <h5 class="card-title donate-organisation"><%= @featured.organisation_name%></h5>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            </div>
            <div class="card-body" id="donate-button">
                <%= link_to "Donate", new_donation_path(organisations_profile_id: @featured.id), class: "btn-profile"%>
            </div>
        </div>
    </div>


    <%# <div class="donate-location">
        <h3>donate to a shelter near you</h3>
        <h4>Enter a postcode/suburb name below</h4>
    </div> %>
    
    

    <div class="donate-list">
        <div class="org-heading">
            <h3 class="centered-heading">Choose an organisation from the list below</h3>
        </div>
        <div class="card-rows-d enquiries-cards">
            <% @organisations_profiles.map do |profile| %>
                <div class="enquiries">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title"><%= profile.organisation_name%></h5>
                            <%# <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> %>
                            <p class="card-text"></p>
                            <%= link_to "read more", profile, class:"card-link enq-links"%>
                            <%= link_to "donate", new_donation_path(organisations_profile_id: profile.id), class:"card-link enq-links"%>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
